#!/bin/bash

# Pre-push hook for OSM-Notes-Monitoring
# Unified Git hook for Bash/SQL projects
# Author: Andres Gomez (AngocA)
# Version: 2026-01-27
# Runs quality tests before allowing push
#
# To install: ln -sf ../../.git-hooks/pre-push .git/hooks/pre-push

set -e

echo "ðŸš€ Running pre-push validation..."
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if we're in the right directory
if [ ! -d "tests" ]; then
    echo -e "${RED}âŒ Not in project root directory${NC}"
    exit 1
fi

# Run quality checks (light version - formatting and basic checks only)
echo -e "${BLUE}ðŸ” Running quality checks...${NC}"
echo -e "${YELLOW}â„¹ï¸  Running light validation (formatting checks only)${NC}"
echo ""

# Check bash formatting
if command -v shfmt &> /dev/null; then
    echo "Checking bash formatting..."
    if find bin scripts -name "*.sh" -type f 2>/dev/null | head -1 | xargs shfmt -d 2>&1 | grep -q "."; then
        echo -e "${RED}âŒ Code formatting issues found${NC}"
        find bin scripts -name "*.sh" -type f -exec shfmt -d {} \; 2>&1 | head -20
        exit 1
    fi
    echo -e "${GREEN}âœ… Formatting check passed${NC}"
fi
echo ""

echo -e "${GREEN}âœ… Pre-push validation complete!${NC}"
echo ""

exit 0
