    {
      "id": 1,
      "title": "CPU Usage (%)",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PostgreSQL"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT metric_value as value FROM metrics WHERE component = 'infrastructure' AND metric_name = 'cpu_usage_percent' ORDER BY timestamp DESC LIMIT 1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 85, "color": "yellow" },
              { "value": 95, "color": "red" }
            ]
          }
        }
      }
