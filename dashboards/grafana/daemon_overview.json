    {
      "id": 9,
      "title": "Recent Errors",
      "type": "table",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
      "targets": [{
        "datasource": {
          "type": "postgres",
          "uid": "PostgreSQL"
        },
        "editorMode": "code",
        "format": "table",
        "rawQuery": true,
        "rawSql": "SELECT timestamp, metric_name, metric_value, metadata FROM metrics WHERE component = 'ingestion' AND (metric_name LIKE '%error%' OR metric_name LIKE '%failed%') AND timestamp > NOW() - INTERVAL '1 hour' ORDER BY timestamp DESC LIMIT 10",
        "refId": "A"
      }]
    }
  ],
  "time": {"from": "now-24h", "to": "now"}
}
